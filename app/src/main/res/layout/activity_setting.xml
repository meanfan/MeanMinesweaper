<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/setting_toolbar_title"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_category"
                android:text="@string/setting_category_game"/>
            <CheckBox
                android:id="@+id/cb_setting_auto_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_item"
                android:checked="false"
                android:text="@string/setting_checkbox_auto_save" />
            <CheckBox
                android:id="@+id/cb_setting_save_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_item"
                android:checked="false"
                android:text="@string/setting_checkbox_save_record" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_category"
                android:text="@string/setting_category_custom_game"/>
            <Button
                android:id="@+id/btn_setting_custom_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_item"
                android:text="@string/setting_game_custom_size"/>
            <Button
                android:id="@+id/btn_setting_custom_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/setting_item"
                android:text="@string/setting_game_custom_mines"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>